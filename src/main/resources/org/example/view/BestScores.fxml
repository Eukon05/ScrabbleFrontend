<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>

<VBox xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.controller.BestScores"
      alignment="CENTER" spacing="10.0"
      prefWidth="400" prefHeight="250">


    <TableView fx:id="table" prefHeight="350" prefWidth="480">
        <columns>
            <TableColumn fx:id="idColumn" text="Game ID" prefWidth="80"/>
            <TableColumn fx:id="nickColumn" text="Nick" prefWidth="100"/>
            <TableColumn fx:id="dateColumn" text="Date" prefWidth="150"/>
            <TableColumn fx:id="scoreColumn" text="Score" prefWidth="100"/>
        </columns>
    </TableView>

    <Button text="Close" onAction="#onClose" />
</VBox>

